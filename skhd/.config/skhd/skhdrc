# -- Changing Window Focus --

# change window focus within space
shift + ctrl - k : yabai -m window --focus north
shift + ctrl - j : yabai -m window --focus south
shift + ctrl - h : yabai -m window --focus west
shift + ctrl - l : yabai -m window --focus east

#change focus between external displays (left and right)
# shift + ctrl - u: yabai -m display --focus west
# shift + ctrl - o: yabai -m display --focus east

# -- Modifying the Layout --

# swap windows
shift + ctrl - n : yabai -m window --swap west
shift + ctrl - m : yabai -m window --swap east

# rotate layout clockwise

# flip along y-axis
shift + ctrl - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + ctrl - u : yabai -m space --mirror x-axis

# toggle window float
shift + ctrl - i : yabai -m window --toggle float --grid 4:4:1:1:2:2

# -- Modifying Window Size --

# maximize a window
shift + ctrl + cmd - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + ctrl - p : yabai -m space --balance

# -- Moving Windows Around --


# move window and split
# shift + ctrl + cmd - k : yabai -m window --warp south
# shift + ctrl + cmd - i : yabai -m window --warp north
# shift + ctrl + cmd - j : yabai -m window --warp west
# shift + ctrl + cmd - l : yabai -m window --warp east


# Resize windows bigger (yes claude figured it out fuck you gpt)
ctrl + cmd + shift - h : yabai -m window --resize left:-50:0 || yabai -m window --resize right:-50:0
ctrl + cmd + shift - j : yabai -m window --resize bottom:0:50 || yabai -m window --resize top:0:50
ctrl + cmd + shift - k : yabai -m window --resize top:0:-50 || yabai -m window --resize bottom:0:-50
ctrl + cmd + shift - l : yabai -m window --resize right:50:0 || yabai -m window --resize left:50:0


# move window to space #
cmd + ctrl + alt + shift - h : id=$(yabai -m query --windows --window | jq -r '.id'); yabai -m window --space 1; yabai -m space --focus 1; yabai -m window --focus $id; yabai -m space --balance
cmd + ctrl + alt + shift - j : id=$(yabai -m query --windows --window | jq -r '.id'); yabai -m window --space 2; yabai -m space --focus 2; yabai -m window --focus $id; yabai -m space --balance
cmd + ctrl + alt + shift - k : id=$(yabai -m query --windows --window | jq -r '.id'); yabai -m window --space 3; yabai -m space --focus 3; yabai -m window --focus $id; yabai -m space --balance
cmd + ctrl + alt + shift - l : id=$(yabai -m query --windows --window | jq -r '.id'); yabai -m window --space 4; yabai -m space --focus 4; yabai -m window --focus $id; yabai -m space --balance
cmd + ctrl + alt + shift - y : id=$(yabai -m query --windows --window | jq -r '.id'); yabai -m window --space 5; yabai -m space --focus 5; yabai -m window --focus $id; yabai -m space --balance
cmd + ctrl + alt + shift - u : id=$(yabai -m query --windows --window | jq -r '.id'); yabai -m window --space 6; yabai -m space --focus 6; yabai -m window --focus $id; yabai -m space --balance
cmd + ctrl + alt + shift - i : id=$(yabai -m query --windows --window | jq -r '.id'); yabai -m window --space 7; yabai -m space --focus 7; yabai -m window --focus $id; yabai -m space --balance
cmd + ctrl + alt + shift - o : id=$(yabai -m query --windows --window | jq -r '.id'); yabai -m window --space 8; yabai -m space --focus 8; yabai -m window --focus $id; yabai -m space --balance
cmd + ctrl + alt + shift - 6 : id=$(yabai -m query --windows --window | jq -r '.id'); yabai -m window --space 9; yabai -m space --focus 9; yabai -m window --focus $id; yabai -m space --balance
cmd + ctrl + alt + shift - 7 : id=$(yabai -m query --windows --window | jq -r '.id'); yabai -m window --space 10; yabai -m space --focus 10; yabai -m window --focus $id; yabai -m space --balance
cmd + ctrl + alt + shift - 8 : id=$(yabai -m query --windows --window | jq -r '.id'); yabai -m window --space 11; yabai -m space --focus 11; yabai -m window --focus $id; yabai -m space --balance
cmd + ctrl + alt + shift - 9 : id=$(yabai -m query --windows --window | jq -r '.id'); yabai -m window --space 12; yabai -m space --focus 12; yabai -m window --focus $id; yabai -m space --balance 
# skhd --stop-service; skhd -o to get the keycode. restart after.

# -- Starting/Stopping/Restarting Yabai --

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service

