{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(cat:*)",
      "Bash(echo:*)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.local)",
      "Read(secrets/**)"
    ]
  },
  "model": "opus",
  "enabledPlugins": {
    "feature-dev@claude-plugins-official": true,
    "github@claude-plugins-official": true
  }
}
