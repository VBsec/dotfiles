yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# default layout (can be bsp, stack or float)
yabai -m config layout bsp
yabai -m config auto_balance on

# new window spawns to the right if vertical split, or bottom if horizontal split
yabai -m config window_placement second_child

# padding set to 12px
yabai -m config top_padding 5
yabai -m config bottom_padding 5
yabai -m config left_padding 5
yabai -m config right_padding 5
yabai -m config window_gap 8 

borders active_color=0xff0fcdea inactive_color=0xff494d64 width=5.0 &

# -- mouse settings --
yabai -m config mouse_follows_focus off
yabai -m config focus_follows_mouse off
# set focus follows mouse mode (default: off, options: off, autoraise, autofocus)
# yabai -m config focus_follows_mouse autoraise

# modifier for clicking and dragging with mouse
yabai -m config mouse_modifier alt
# set modifier + left-click drag to move window
yabai -m config mouse_action1 move
# set modifier + right-click drag to resize window
yabai -m config mouse_action2 resize

# when window is dropped in center of another window, swap them (on edges it will split it)
yabai -m mouse_drop_action swap

# modify window shadows (default: on, options: on, off, float)
# example: show shadows only for floating windows
# yabai -m config window_shadow float

# window opacity (default: off)
# example: render all unfocused windows with 90% opacity
yabai -m config window_opacity off
# yabai -m config active_window_opacity 1.0
# yabai -m config normal_window_opacity 0.7
# yabai -m signal --add label="flash_focus" event="window_focused" action="yabai -m window \$YABAI_WINDOW_ID --opacity 0.1 && sleep $(yabai -m config window_opacity_duration) && yabai -m window \$YABAI_WINDOW_ID --opacity 0.0"

# disable specific apps
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Karabiner-Elements$" manage=off
yabai -m rule --add app="^VLC media player$" manage=off
yabai -m rule --add app="^QuickTime Player$" manage=off
yabai -m rule --add app="^RuneLite$" manage=off
yabai -m rule --add app="^Raycast$" manage=off
yabai -m rule --add app="^Parallels Desktop$" manage=off
yabai -m rule --add app="^STM32CubeIDE$" title!="workspace" manage=off
yabai -m rule --add app="^Github Desktop$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Alacritty$" manage=off
yabai -m rule --add title="Picture-in-Picture" manage=off
yabai -m rule --add title="Generate Signed App Bundle or APK" manage=off
yabai -m rule --add app="qemu-system-aarch64" manage=off
yabai -m rule --add app="^1Password$" manage=off

