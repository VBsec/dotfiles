layout {
    pane size=1 borderless=true {
        plugin location="tab-bar"
    }
    pane stacked=true {
        pane name="claude" command="claude" focus=true
        pane name="vim" command="nvim" {
            args "."
        }
        pane name="shell"
    }
    pane size=1 borderless=true {
        plugin location="status-bar"
    }
}
